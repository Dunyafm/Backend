@model List<Blog>







@foreach (var blog in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-blog mb-60">
            <div class="blog-img">
                <a href="#"><img src="~/img/@blog.Image" alt="blog"></a>
                <div class="blog-hover">
                    <i class="fa fa-link"></i>
                </div>
            </div>
            <div class="blog-content">
                <div class="blog-top">
                    <p>@blog.Title /  @blog.Date  /  <i class="fa fa-comments-o"></i> 4</p>
                </div>
                <div class="blog-bottom">
                    <h2><a href="blog-details.html">@blog.Description </a></h2>
                    <a asp-controller="Blog" asp-action="Detail" asp-route-Id="@blog.Id">read more</a>
                </div>
            </div>
        </div>
    </div>
}


