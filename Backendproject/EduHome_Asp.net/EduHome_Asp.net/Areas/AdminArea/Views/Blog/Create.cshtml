@model Blog

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Create Blogs Blog Form </p>
                    <form class="forms-sample" method="Post" enctype="multipart/form-data">


                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input class="form-control" asp-for="Title" placeholder="Title"></input>
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input class="form-control" asp-for="Description" placeholder="Description"></input>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photos"></label>
                            <input class="form-control" asp-for="Photos" placeholder="Photos"></input>
                            <span class="text-danger" asp-validation-for="Photos"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Date"></label>
                            <input class="form-control" asp-for="Date" placeholder="Description"></input>
                            <span class="text-danger" asp-validation-for="Date"></span>
                        </div>

                        <button class="btn btn-primary">Submit</button>
                        <button asp-action="Index" class="btn btn-outline-warning"> Go Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

