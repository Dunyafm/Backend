@model Slider
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <div class="img">
        <img src="~/img/@Model.Image" alt="slider" style="width:250px;height:250px" />
    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photos"></label>
            <input class="form-control" style="width:300px" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" style="width:300px" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" style="width:300px" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
